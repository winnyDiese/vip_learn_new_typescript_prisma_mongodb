generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma" // OU tu peux enlever output pour rester par d√©faut
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Customer {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique
  phone     String?
  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt
}
